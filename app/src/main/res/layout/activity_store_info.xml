<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_store_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.e_torn.StoreInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/disponibleTurn"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp"
                android:background="@drawable/disponible_turn_design"
                android:gravity="center_vertical|center_horizontal"
                android:text="30"
                android:textColor="@android:color/white"
                android:textSize="50sp"></TextView>

            <TextView
                android:id="@+id/disponibleTurnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/disponibleTurn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="TORN DISPONIBLE" />

        </RelativeLayout>

        <View
            android:layout_width="264dp"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="@android:color/darker_gray"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/actualTurn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:background="@drawable/actual_turn_design"
                android:gravity="center_vertical|center_horizontal"
                android:text="20"
                android:textColor="@android:color/white"
                android:textSize="30sp"></TextView>

            <TextView
                android:id="@+id/actualTurnText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/actualTurn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:text="TORN ACTUAL" />

            <TextView
                android:id="@+id/queueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cua per davant"
                android:layout_marginBottom="22dp"
                android:layout_above="@+id/getTurnBtn"
                android:layout_alignLeft="@+id/imageView2"
                android:layout_alignStart="@+id/imageView2" />

            <TextView
                android:id="@+id/queue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 torns"
                android:layout_marginLeft="5dp"
                android:layout_alignBaseline="@+id/queueText"
                android:layout_alignBottom="@+id/queueText"
                android:layout_toRightOf="@+id/queueText"
                android:layout_toEndOf="@+id/queueText" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/getTurnBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="14dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:clickable="true"
                android:tint="@android:color/white"
                app:fabSize="mini"
                app:rippleColor="@android:color/white"
                app:srcCompat="@mipmap/ic_turned_in_black_24dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_access_time_black_24dp"
                android:layout_alignBottom="@+id/getTurnBtn"
                android:layout_toLeftOf="@+id/actualTurnText"
                android:layout_toStartOf="@+id/actualTurnText" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEMPS"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/timeText"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/timeText"
                android:layout_toRightOf="@+id/timeText"
                android:text="10 Minuts" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
